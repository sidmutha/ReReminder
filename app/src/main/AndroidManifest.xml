<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sidmutha.rereminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ReminderEditActivity"
            android:label="@string/title_activity_reminder_edit"></activity>
        <activity
            android:name=".activities.DateTimePickerActivity"
            android:label="@string/title_activity_date_time_picker"></activity>
        <activity
            android:name=".activities.ReminderListActivity"
            android:label="@string/title_activity_reminder_list"></activity>
    </application>

</manifest>
